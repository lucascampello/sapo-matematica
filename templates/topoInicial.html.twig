<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}


        <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet" id="bootstrap-css">
        <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>
        <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
        <script src="{{asset('/assets/js/calendario.js')}}"></script>

        <link rel="stylesheet" href="{{ asset('/assets/css/inicial.css') }}"> 
        <link rel="stylesheet" href="{{ asset('/assets/css/calendario.css') }}"> 

        {% block stylesheets %} 
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        <div id="topo">
            <div id="logo"><img src="{{ asset('/assets/imagens/logo.png')}}"></div>
            <div id="menu">
                <ul>
                    {% if id != "inicial" %}
                    <li>
                        <a href="{{ path('app_tela_inicial')}}">Home</a>
                    </li>
                    {% endif %}
                    <li>
                        {% if id != "login" %}<a href="{{ path('app_tela_login')}}">Login</a>
                        {% endif %}
                    </li>
                    <li><a href="{{ path('app_tela_login')}}">Recuperar Senha</a></li>
                    <li><a href="{{ path('app_tela_login')}}">Sobre</a></li>
                    <li><a href="{{ path('app_tela_login')}}">Contato</a></li>
                </ul>
            </div>
        </div>
        <br clear="both"/>
        <div id="conteudo">
            <h1> {{ titulo }}</h1>
            <div id="esquerdo">
                {% block esquerdo %}
                {% endblock %}
            </div>
            <div id="direito">
                <div class="row"> 
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"> 
                        <div id="my-calendar"></div>
                    </div><!--(./col-lg-12 col-md-12 col-sm-12 col-xs-12"BELOW ROW:)-->
                </div><!--(./row)-->

                <video class="video-fluid z-depth-1" autoplay loop controls muted>
                    <source src="{{asset('/assets/video/apresentacao.mp4')}}" type="video/mp4" />
                </video>

                {% block direito %}
                {% endblock %}
            </div>
            <br clear="both"/>
        </div>
        <br clear="both"/>
        {% block body %}
        {% endblock %}


        <div id="erro">
                {% block erro %}
                {% endblock %}
        </div>
        </div>
        <div id="rodape">
            &copy; 2021 - Lucs Campello da Pieva. Todos os direitos reservados.
        </div>
    </body>
</html>
